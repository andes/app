{
    "compilerOptions": {
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "es2022",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "target": "ES2022",
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "@andes/auth": [
                "projects/auth/src/public-api.ts"
            ],
            "@andes/shared": [
                "projects/shared/src/public-api.ts"
            ],
            "@andes/form-builder": [
                "projects/form-builder/src/public-api.ts"
            ]
        },
        "useDefineForClassFields": false
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "./**/*.ts",
        "./karma.conf.js",
        "./webpack.config.js",
        ".eslintrc.js",
        "node_modules/ng2-slugify/**/*.ts"
    ],
    "exclude": [
        "node_modules/@andes/plex/**/*.spec.ts",
        "node_modules/@schematics/**/*.ts",
        "node_modules/karma/**/*.ts",
        "**/environments/*.ts"
    ],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": false,
        "strictInjectionParameters": false,
        "strictTemplates": false
    }
}