{
    "compilerOptions": {
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "mapRoot": "./",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./**/*.ts",
        "../node_modules/@andes/**/*.ts",
        "../node_modules/ng2-slugify/**/*.ts"
    ],
    "exclude": [
        "../node_modules/@schematics/**/*.ts",
        "../node_modules/karma/**/*.ts"
    ]
}